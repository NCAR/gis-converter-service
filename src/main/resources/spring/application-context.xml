<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">
	
 	<import resource="classpath:default-servlet-context.xml" /> 
	<import resource="classpath:infrastructure-context.xml" />
	
	<bean id="propertyConfigurer" class="sgf.spring.extensions.LoggingPropertyPlaceholderConfigurer">
		<constructor-arg index="0">
			<set>
				<value>database.password</value>
			</set>
		</constructor-arg>
		
		<property name="locations">
	      	<list>
	      		<value>file:${gateway.home}/conf/portal.properties</value>
	      	</list>
	      </property>
		
	</bean>	
	
	<bean id="string2ScaleConverter" class="ucar.ral.gis.services.converters.String2ScaleConverter">
		<constructor-arg>
			<map>
				<entry key="d"> <util:constant static-field="ucar.ral.gis.services.Scale.DOWNSCALED"/> </entry>
				<entry key="g"> <util:constant static-field="ucar.ral.gis.services.Scale.GLOBAL"/> </entry>
			</map>
		</constructor-arg>
	</bean>
	
	 <bean id="conversionService"
          class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
        <property name="converters">
            <set>
                <ref bean="string2ScaleConverter" />
            </set>
        </property>
        <property name="formatters">
            <set>
            </set>
        </property>
        <property name="formatterRegistrars">
            <set>
            </set>
        </property>
    </bean>
	

	
	<bean id="dataFileFactory" class="ucar.ral.gis.services.DataFileFactory" >
		<constructor-arg index="0" value="/datazone/esg-cdp/xserve/ccsm/ipcc" />
		<constructor-arg index="1">
			<map>
				<entry key="20C" value="20C3M"/>
				<entry key="commitment" value="Commit"/>
				<entry key="A1B" value="SRESA1B"/>
				<entry key="B1" value="SRESB1"/>
				<entry key="A2" value="SRESA2"/>
			</map>
		</constructor-arg>
		<constructor-arg index="2">
			<map>
				<entry key="1" value="run1"/>
				<entry key="2" value="run2"/>
				<entry key="3" value="run3"/>
				<entry key="4" value="run4"/>
				<entry key="5" value="run5"/>
				<entry key="6" value="run6"/>
				<entry key="7" value="run7"/>
				<entry key="8" value="run8"/>
				<entry key="9" value="run9"/>
			</map>
		</constructor-arg>
	</bean>
	
	
	<bean id="convertNetCDF2Shapefile" class="ucar.ral.gis.services.web.NetCDF2Shapefile" >
		<constructor-arg index="0" ref="dataFileFactory" />
	</bean>
	
</beans>